<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="352dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/icon_alumno"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageViewusuarioFotoPerfill"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4.04">

                        <TextView
                            android:id="@+id/txtViewusuarioNombre"
                            android:layout_width="270dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:typeface="sans"
                            android:textSize="14sp"
                            android:text="anonymous"

                            android:textStyle="normal|bold"
                            android:layout_marginRight="10dp"
                            android:paddingTop="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="@string/comment_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtViewusuarioFechaPublicacion"
                                android:layout_marginEnd="5dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="Notes Materias - Incluye la Carrera a la cual le pertenece - al momento de jalarlo de la base de datos  ajksjdal daskljdalksd nasdklansd asdjasd asdjals dalsjdka sdlkajsda sdajsd asldjas dalsjda dslkajsdas sdjasdn;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewusuarioComentario"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>